#cloud-config

# This is the user-data configuration file for cloud-init. By default this sets
# up an initial user called "ubuntu" with password "ubuntu", which must be
# changed at first login. However, many additional actions can be initiated on
# first boot from this file. The cloud-init documentation has more details:
#
# https://cloudinit.readthedocs.io/
#
# Some additional examples are provided in comments below the default
# configuration.

# Enable password authentication with the SSH daemon
ssh_pwauth: true

# On first boot, set the (default) ubuntu user's password to "ubuntu" and
# expire user passwords
chpasswd:
  expire: true
  list:
  - ubuntu:ubuntu

packages:
  - wget
  - curl
  - git
  - make
  - facter

runcmd:
  - ip_dash=$(hostname -I | tr '.' '-')
  - host_prefix='pi-'
  - linux_arch=$(facter --no-ruby os.architecture)
  - cloud-init-per always sethost hostnamectl set-hostname ${host_prefix}${ip_dash}
  - cloud-init-per once donwload_mitamae curl -L -s -S https://github.com/itamae-kitchen/mitamae/releases/download/v1.11.6/mitamae-${linux_arch}-linux -o /usr/local/bin/mitamae
  - cloud-init-per always chmod_mitamae chmod 0755 /usr/local/bin/mitamae
  - cloud-init-per always sleep sleep 5
  - cloud-init-per once clone_repo git clone https://github.com/deniskin82/rpi.git /opt/rpi
  - cloud-init-per always pull_repo git pull /opt/rpi
  - cloud-init-per always install_coredns mitamae local -y /opt/rpi/node.yaml /opt/rpi/recipes/coredns/install.rb
  - cloud-init-per always run_coredns mitamae local -y /opt/rpi/node.yaml /opt/rpi/recipes/coredns/run.rb

